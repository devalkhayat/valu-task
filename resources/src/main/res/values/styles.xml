<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!--item_product -->
    <style name="item_title">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="item_price">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <!-- Details-->
    <style name="details_title" parent="item_title">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>
    <style name="details_description" >
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/app_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="customCardview" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/app_yellow</item>
        <item name="colorControlActivated">@color/app_yellow</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
    </style>
</resources>